# vLLM Metal environment configuration
# Copy to ~/.vllm-metal-env and generate an API key:
#   API_KEY=$(openssl rand -hex 16)
#   echo "export VLLM_API_KEY=${API_KEY}" >> ~/.vllm-metal-env

export VLLM_METAL_MEMORY_FRACTION=auto
export VLLM_METAL_USE_MLX=1
export VLLM_METAL_BLOCK_SIZE=16
export VLLM_MLX_DEVICE=gpu
export VLLM_METAL_DEBUG=0

# Offline mode (enable AFTER downloading models)
export HF_HUB_OFFLINE=1
export TRANSFORMERS_OFFLINE=1
export DO_NOT_TRACK=1

# API key (generate with: openssl rand -hex 16)
# export VLLM_API_KEY=your-key-here
